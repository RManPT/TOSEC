<h2>
  DAT File</h2>
  <hr>
<div class="table-responsive text-nowrap ">
  <p>
    <strong>Name:</strong>
    <%= @datfile.name %>
  </p>
  <p>
    <strong>Collection:</strong>
    <%= @collection_type.find(@datfile.collection_type_id).name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @datfile.readme %>
  </p>
  <p>
    <strong>Uploaded on:</strong>
    <%= @datfile.created_at %>
  </p>
  <hr>

  <div class="text-right">
    <%= link_to 'Back', datfiles_path, class: 'btn btn-default' %>
      <%= link_to 'Edit', edit_datfile_path(@datfile), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', datfile_path(@datfile), class: 'btn btn-danger',
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<%= render '/welcome/bottom' %>