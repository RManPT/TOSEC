<h2>Listing DAT files</h2>
<div class="text-right">
    <%= link_to 'New DAT file', new_datfile_path, class: 'btn btn-primary' %>
    <p>&nbsp;</p>
    
</div>

<div class="table-responsive text-nowrap">
  <table class="table table-hover">
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>

    <% @datfile.each do |datfile| %>
      <tr>
        <td>
          <%=  datfile.created_at.strftime("%F") %>
        </td>
        <td>
          <%= datfile.name %>
        </td>
        <td class="text-right">
          <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, datfile_path(datfile), class: 'btn btn-default' %>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_datfile_path(datfile), class: 'btn btn-default' %>
              <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, datfile_path(datfile),
          method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </td>
      </tr>
      <% end %>
  </table>
  <div class="text-right">
      <%= link_to 'New DAT file', new_datfile_path, class: 'btn btn-primary' %>
  </div>
</div>
<%= render '/welcome/bottom' %>