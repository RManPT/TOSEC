<h1>Listing Release types</h1>

<table>
 <tr>
   <th>Name</th>
   <th>Description</th>
   <th colspan="3"></th>
 </tr>

 <% @release_type.each do |release_type| %>
   <tr>
     <td><%= release_type.name %></td>
     <td><%= release_type.desc %></td>
     <td><%= link_to 'Show', release_type_path(release_type) %></td>
     <td><%= link_to 'Edit', edit_release_type_path(release_type) %></td>
     <td><%= link_to 'Destroy', release_type_path(release_type),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
   </tr>
 <% end %>
 
</table>
<p>&nbsp</p>
