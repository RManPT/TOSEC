<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="table-responsive text-nowrap">
  <% if can? :create, User %>
    <div class="text-left">
        <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
    </div>
  <% end %>

  <table class="table table-hover">
    <tr>
      <th>Admin</th>
      <th>Mod</th>
      <th>Pub</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.admin %></td>
        <td><%= user.mod %></td>
        <td><%= user.pub %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td class="text-right">
            <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, user , class: 'btn btn-default'%>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_user_path(user) , class: 'btn btn-default'%>
            <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

