<h1>Listing companies</h1>

<div>

  <div class="text-right">
    <%= link_to 'New company', new_company_path, class: 'btn btn-primary' %>
      <p>&nbsp;</p>
  </div>
  <div class="text-left">
    <%= paginate @companies %>
  </div>
</div>

<div class="table-responsive text-nowrap">
  <table class="table table-hover">
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>

    <% @companies.each do |company| %>
      <tr data-toggle="tooltip" title="Click for details">
          <td data-link="<%= company_path(company) %>" >
              <%=  company.created_at.strftime("%F") %>
          </td>
  
          <td width="100%" data-link="<%= company_path(company) %>" >
              <%= company.title %>
        </td>
        <td class="text-right">
          <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, company_path(company), class: 'btn btn-default' %>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_company_path(company), class: 'btn btn-default' %>
              <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, company_path(company),
        method: :delete,
        data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </td>
      </tr>
      <% end %>
  </table>
  <div>
      <div class="text-left">
          <%= paginate @companies %>
        </div>
    <div class="text-right">
      <%= link_to 'New company', new_company_path, class: 'btn btn-primary' %>
    </div>

  </div>
</div>
