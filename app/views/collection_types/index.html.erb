<h2>Listing collections</h2>
<div class="text-right">
    <%= link_to 'New collection type', new_collection_type_path, class: 'btn btn-primary' %>
    <p>&nbsp;</p>
  </div>

<div class="table-responsive text-nowrap">
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <td>&nbsp;</td>
    </tr>

    <% @collection_type.each do |collection_type| %>
      <tr>
        <td>
          <%= collection_type.name %>
        </td>
        <td>
          <%= collection_type.desc %>
        </td>
        <td class="text-right">
          <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, collection_type_path(collection_type), class: 'btn btn-default' %>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_collection_type_path(collection_type), class: 'btn btn-default' %>
              <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, collection_type_path(collection_type),
      method: :delete,
      data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </td>
      </tr>
      <% end %>
  </table>
 
  <div class="text-right">
    <%= link_to 'New collection type', new_collection_type_path, class: 'btn btn-primary' %>
  </div>
</div>
<%= render '/welcome/bottom' %>