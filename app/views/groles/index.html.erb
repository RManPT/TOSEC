<h1>
  Listing Group roles</h1>

<div>

  <div class="text-right">
    <%= link_to 'New Group Role', new_grole_path, class: 'btn btn-primary' %>
      <p>&nbsp;</p>
  </div>
  <div class="text-left">
    <%= paginate @groles %>
  </div>
</div>

<div class="table-responsive text-nowrap">
  <table class="table table-hover">
    <tr>
      <th>Route</th>
      <th>Role</th>
      <th>Email</th>
      <th>&nbsp;</th>
    </tr>
    <% @groles.each do |grole| %>
      <tr data-toggle="tooltip" title="Click for details">
        <td width="100%" data-link="<%= grole_path(grole) %>">
          <%= grole.route.name %>
        </td>
        <td class="text-center" data-link="<%= grole_path(grole) %>">
          <%= grole.role.name %>
        </td>
        <td class="text-center" data-link="<%= grole_path(grole) %>">
          <%= grole.user.email %>
        </td>
        <td>
          <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, grole_path(grole), class: 'btn btn-default stop-prop' %>
            <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_grole_path(grole), class: 'btn btn-default stop-prop' %>
              <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, grole_path(grole), class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td>
      </tr>
      <% end %>
  </table>
</div>
