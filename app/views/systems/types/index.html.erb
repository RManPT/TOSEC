<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h2>Listing Systems Type</h2>
        </div>
        <!-- <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-search"></i>
                </span>
                <input class="form-control" id="myInput" type="text" placeholder="Search...">
            </div>
            
        </div> -->
        <div class="text-right">
                <%= link_to 'New system', new_system_path, class: 'btn btn-primary' %>
            </div>
    
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel-group" id="accordion">
                        <% @types.each do |s| %>
                            <div id="info">
                                <div class="panel panel-default" id="myInfo">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= s.id %>">
                                                <%= s.name %>
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapse<%= s.id  %>" class="panel-collapse collapse">
                                            <div class="row">
                                                <div class="col-md-6 text-right">
                                                        <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, systems_type_path(s), class: 'btn btn-default' %>
                                                        <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_systems_type_path(s), class: 'btn btn-default' %>
                                                          <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, systems_type_path(s),
                                                      method: :delete,
                                                      data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>                                                
                                                    </div>
                                         
                                      
                                        </div>
                                    </div>
                                </div>
                                <br>
                            </div>
                            <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
            <%= link_to 'New system', new_system_path, class: 'btn btn-primary' %>
        </div>
        </div>
        <%= render '/welcome/bottom' %>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#info #myInfo").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>