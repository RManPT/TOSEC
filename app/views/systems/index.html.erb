<div class="container-fluid">
    <h1>Listing Systems</h1>
    <%= link_to 'New System', new_system_path %>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">
            <span class="glyphicon glyphicon-search"></span>Search</button>
        <br>
        <br>
        <div class="panel-group" id="accordion">
            <% @systems.each do |s| %>
            <div id="info">
                <div class="panel panel-default" id="myInfo">
                    
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= s.abbreviation %>">
                                    <%= s.abbreviation %> -
                                        <%= s.name %>
                                </a>
                            </h4>
                        </div>
                        <div id="collapse<%= s.abbreviation %>" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <% if s.company? %>
                                            <p>
                                                <strong>Company: </strong>
                                                <%= s.company %>
                                            </p>
                                            <% end %>
                                                <% if s.typeSys? %>
                                                    <p>
                                                        <strong>Type: </strong>
                                                        <%= s.typeSys %>
                                                    </p>
                                                    <% end %>
                                    </div>
                                    <div class="col-md-6">
                                        <%= link_to 'Show', system_path(s) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>

        </div>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-body">
                        <input class="form-control" id="myInput" type="text" placeholder="Search...">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
        <script>
            $(document).ready(function () {
                $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#info #myInfo").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>